<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5sp"
    android:background="#A0D6B4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5sp"
        android:background="#A0D6B4">

        <TextView
            android:id="@+id/list_item_tv_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#00F2F6C7"
            android:fontFamily="monospace"
            android:padding="2sp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:width="20dp"
            android:background="#FACECE"
            android:padding="2sp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5sp">

        <TextView
            android:id="@+id/list_item_discription"
            android:layout_width="241dp"
            android:layout_height="51dp"
            android:background="#F3DBD4"
            android:fontFamily="monospace"
            android:paddingLeft="20sp"
            android:paddingRight="0sp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F3DBD4"
                android:text="Status:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/status_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F3DBD4"
                android:text="TextView"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>